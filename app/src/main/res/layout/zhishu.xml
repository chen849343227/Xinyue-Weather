<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_livingIndex"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="20.0dip"
        android:text="@string/activity_home_class_title_living_index"
        android:textColor="@color/home_text_color_dark"
        android:textSize="14.0sp"/>

    <include
        android:id="@+id/livingIndex_0"
        layout="@layout/item_living_index_simple"/>

    <include
        android:id="@+id/livingIndex_1"
        layout="@layout/item_living_index_simple"/>

    <include
        android:id="@+id/livingIndex_2"
        layout="@layout/item_living_index_simple"/>

    <include
        android:id="@+id/livingIndex_3"
        layout="@layout/item_living_index_simple"/>

    <include
        android:id="@+id/livingIndex_4"
        layout="@layout/item_living_index_simple"/>

    <include
        android:id="@+id/livingIndex_5"
        layout="@layout/item_living_index_simple"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/home_item_divider_color"/>
</LinearLayout>

