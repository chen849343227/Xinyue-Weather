<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/tv_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6dffffff"
                        android:textSize="11.0sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/tv_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6dffffff"
                        android:textSize="11.0sp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/tv_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30.0dp"
                        android:fontFamily="@font/melody"
                        android:textColor="#fff3f3f3"
                        android:textSize="90.0sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_degree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dp"
                        android:fontFamily="@font/melody"
                        android:text="@string/str_temperature"
                        android:textColor="#fff3f3f3"
                        android:textSize="67.0sp"
                        android:visibility="invisible"
                        app:layout_constraintStart_toEndOf="@+id/tv_temp"
                        app:layout_constraintTop_toTopOf="@+id/tv_temp" />

                    <ViewFlipper
                        android:id="@+id/flipper_alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="35.0dp"
                        android:background="@drawable/line_button_bg"
                        android:flipInterval="3000"
                        android:inAnimation="@anim/flipper_push_up_in"
                        android:outAnimation="@anim/flipper_push_up_out"
                        android:paddingLeft="15.0dp"
                        android:paddingTop="8.0dp"
                        android:paddingRight="15.0dp"
                        android:paddingBottom="8.0dp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_temp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/view_forecast_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_info_card"
                    android:orientation="vertical"
                    android:paddingTop="16.0dp"
                    android:paddingBottom="16.0dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                      <!--  <hanjie.app.pureweather.widget.view.TempCurveView
                            android:id="@+id/view_temp_curve"
                            android:layout_width="match_parent"
                            android:layout_height="170.0dp"
                            android:visibility="invisible" />

                        <hanjie.app.pureweather.widget.view.TempLineView
                            android:id="@+id/view_temp_line"
                            android:layout_width="match_parent"
                            android:layout_height="170.0dp" />-->
                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_forecast"
                        style="@style/WidgetScrollbarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dp"
                        android:scrollbars="none" />
                </LinearLayout>

                <com.chen.xinyueweather.widget.TouchableConstraintLayout
                    android:id="@+id/view_hour_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.0dp"
                    android:layout_marginTop="16.0dp"
                    android:layout_marginEnd="16.0dp"
                    android:background="@drawable/shape_bg_info_card"
                    android:paddingTop="16.0dp"
                    android:paddingBottom="14.0dp">

                    <TextView
                        android:id="@+id/indicator_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.0dp"
                        android:drawableStart="@drawable/shape_main_label_indicator"
                        android:drawablePadding="8.0dp"
                        android:gravity="center_vertical"
                        android:text="@string/activity_home_class_title_hour_forecast"
                        android:textColor="@android:color/white"
                        android:textSize="14.0sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dp"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/indicator_hour">

                        <hanjie.app.pureweather.widget.view.HourWeatherView
                            android:id="@+id/view_hour_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="180.0dp" />
                    </HorizontalScrollView>
                </com.chen.xinyueweather.widget.TouchableConstraintLayout>

                <com.chen.xinyueweather.widget.TouchableConstraintLayout
                    android:id="@+id/view_aqi_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.0dp"
                    android:layout_marginTop="16.0dp"
                    android:layout_marginEnd="16.0dp"
                    android:background="@drawable/shape_bg_info_card"
                    android:padding="16.0dp">

                    <TextView
                        android:id="@+id/indicator_aqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/shape_main_label_indicator"
                        android:drawablePadding="8.0dp"
                        android:gravity="center_vertical"
                        android:text="@string/activity_home_class_title_air_quality"
                        android:textColor="@android:color/white"
                        android:textSize="14.0sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_aqi_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_aqi"
                        android:drawablePadding="6.0dp"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="13.0sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <hanjie.app.pureweather.widget.view.HalfCircleProgressView
                        android:id="@+id/view_aqi_progress"
                        android:layout_width="180.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/indicator_aqi" />

                    <TextView
                        android:id="@+id/tv_aqi_tips"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.0dp"
                        android:layout_marginTop="20.0dp"
                        android:layout_marginEnd="16.0dp"
                        android:gravity="center"
                        android:lineSpacingExtra="2.0dp"
                        android:textColor="@android:color/white"
                        android:textSize="12.0sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_aqi_progress" />
                </com.chen.xinyueweather.widget.TouchableConstraintLayout>

                <com.chen.xinyueweather.widget.TouchableConstraintLayout
                    android:id="@+id/view_wind_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.0dp"
                    android:layout_marginTop="16.0dp"
                    android:layout_marginEnd="16.0dp"
                    android:background="@drawable/shape_bg_info_card"
                    android:padding="16.0dp">

                    <TextView
                        android:id="@+id/indicator_wind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/shape_main_label_indicator"
                        android:drawablePadding="8.0dp"
                        android:gravity="center_vertical"
                        android:text="@string/activity_home_class_title_wind_and_humidity"
                        android:textColor="@android:color/white"
                        android:textSize="14.0sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.4" />

                    <LinearLayout
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toStartOf="@+id/guideline2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/indicator_wind">

                        <hanjie.app.pureweather.widget.view.WindmillView
                            android:id="@+id/view_wind_big"
                            android:layout_width="0.0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10.0" />

                        <hanjie.app.pureweather.widget.view.WindmillView
                            android:id="@+id/view_wind_small"
                            android:layout_width="0.0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7.0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dp"
                        android:layout_height="0.0dp"
                        android:layout_marginStart="50.0dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/guideline2"
                        app:layout_constraintTop_toTopOf="parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.0dp"
                            android:layout_weight="1.0">

                            <TextView
                                style="@style/main_wind_card_label_text"
                                android:text="@string/activity_home_str_wind_direction" />

                            <TextView
                                android:id="@+id/tv_wind_direction"
                                style="@style/main_wind_card_label_value" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.0dp"
                            android:layout_weight="1.0">

                            <TextView
                                style="@style/main_wind_card_label_text"
                                android:text="@string/activity_home_str_wind_speed" />

                            <TextView
                                android:id="@+id/tv_wind_speed"
                                style="@style/main_wind_card_label_value" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.0dp"
                            android:layout_weight="1.0">

                            <TextView
                                style="@style/main_wind_card_label_text"
                                android:text="@string/activity_home_str_wind" />

                            <TextView
                                android:id="@+id/tv_wind_force"
                                style="@style/main_wind_card_label_value" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.0dp"
                            android:layout_weight="1.0">

                            <TextView
                                style="@style/main_wind_card_label_text"
                                android:text="@string/activity_home_str_humidity" />

                            <TextView
                                android:id="@+id/tv_humidity"
                                style="@style/main_wind_card_label_value" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.0dp"
                            android:layout_weight="1.0">

                            <TextView
                                style="@style/main_wind_card_label_text"
                                android:text="@string/activity_home_str_visibility" />

                            <TextView
                                android:id="@+id/tv_visibility"
                                style="@style/main_wind_card_label_value" />
                        </FrameLayout>
                    </LinearLayout>
                </com.chen.xinyueweather.widget.TouchableConstraintLayout>

                <com.chen.xinyueweather.widget.TouchableConstraintLayout
                    android:id="@+id/view_sun_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.0dp"
                    android:layout_marginTop="16.0dp"
                    android:layout_marginEnd="16.0dp"
                    android:background="@drawable/shape_bg_info_card"
                    android:paddingTop="16.0dp">

                    <TextView
                        android:id="@+id/indicator_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.0dp"
                        android:drawableStart="@drawable/shape_main_label_indicator"
                        android:drawablePadding="8.0dp"
                        android:gravity="center_vertical"
                        android:text="@string/activity_home_class_title_sun"
                        android:textColor="@android:color/white"
                        android:textSize="14.0sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <hanjie.app.pureweather.widget.view.SunView
                        android:id="@+id/view_sun"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/indicator_sun" />
                </com.chen.xinyueweather.widget.TouchableConstraintLayout>

                <com.chen.xinyueweather.widget.TouchableConstraintLayout
                    android:id="@+id/view_index_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.0dp"
                    android:layout_marginTop="16.0dp"
                    android:layout_marginEnd="16.0dp"
                    android:background="@drawable/shape_bg_info_card"
                    android:paddingTop="16.0dp">

                    <TextView
                        android:id="@+id/indicator_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.0dp"
                        android:drawableStart="@drawable/shape_main_label_indicator"
                        android:drawablePadding="8.0dp"
                        android:gravity="center_vertical"
                        android:text="@string/activity_home_class_title_living_index"
                        android:textColor="@android:color/white"
                        android:textSize="14.0sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_limit_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16.0dp"
                        android:drawableStart="@drawable/ic_limit_car"
                        android:drawablePadding="8.0dp"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="13.0sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <hanjie.app.pureweather.widget.view.TouchlessRecyclerView
                        android:id="@+id/rv_index"
                        style="@style/WidgetScrollbarStyle"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dp"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/indicator_index" />
                </com.chen.xinyueweather.widget.TouchableConstraintLayout>

                <TextView
                    android:id="@+id/tv_data_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16.0dp"
                    android:text="@string/activity_home_class_title_data_source"
                    android:textColor="#6affffff"
                    android:textSize="13.0sp" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>